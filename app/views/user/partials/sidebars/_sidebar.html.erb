<div class="d-flex flex-column p-4 text-center text-white bg-dark" style="width: 311px;">
  <% if request.fullpath.to_s.include?('organizations') && request.fullpath.to_s.include?('search_by')  %>
    <%= render "user/partials/sidebars/sidebar_organizations"%>
  <%else%>
    <div class="d-flex flex-column">
      <%= render "user/partials/sidebars/dash"%>
    </div>
    <% if current_user_is_legalrep? %>
      <%= render "user/partials/sidebars/manage"%>
      <%= render "user/partials/sidebars/data" %>
    <%end%>

    <div class="d-flex flex-column align-items-center text-center">
      <%= render "user/partials/sidebars/profile"%>
    </div>
  <%end%>
</div> 