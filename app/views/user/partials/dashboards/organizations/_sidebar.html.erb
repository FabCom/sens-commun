  <h4 class="text-info">Secteurs d'activit√©</h4>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
      <% links.each do |link| %>
        <li class="nav-item mb-2" style="font-size:smaller">
          <%= link_to "#{link[:label]}", user_dashboards_organizations_path(sectorID: link[:id]), class:"sidebar-item text-light text-decoration-none" %>
        </li>
      <% end %>
  </ul>
  <hr>
</div>