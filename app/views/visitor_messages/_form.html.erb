
<% if user_signed_in? %>
  <p> Accedez a votre messagerie pour nous contacter </p>
  <%= link_to "ma messagerie", user_dashboards_index_path(clicked_link:"Messagerie"), class:"btn btn-primary mb-3" %>
<% else %>
  <%= simple_form_for(@visitor_message) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    
    <div class="form-inputs text-start">
      <%= f.input :email %>
      <%= f.input :message %>
      <div class="action mt-3 mb-3">
        <%= f.submit "Envoyer", class:"btn btn-primary" %>
      </div>
    </div>  
  <% end %>
<%end%>
