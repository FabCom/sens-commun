<!DOCTYPE html>
<html>
  <head>
    <title>SensCommun</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%=render "partials/navbars/navbar"%>

    <div class="container-fluid">

      <div class="row text-end">
        <% flash.each do |type, msg| %>
          <div class="alert alert-<%=type%>">
              <%= msg %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <%unless request.path_info.to_s=="/" || request.path_info.to_s=="/pages/contact"%>
          <%if (user_signed_in? || admin_signed_in?) %>
            <div class="col-2">
              <%if user_signed_in? %>
                <%=render "partials/sidebars/sidebar_user"%>
              <%elsif admin_signed_in?%>
                <%=render "partials/sidebars/sidebar_admin"%>
              <%end%>
            </div>
          <%end%>
        <%end%>
        <div class="col">
          <%= yield %>
        </div>

      </div>

    </div>

  </body>
</html>
