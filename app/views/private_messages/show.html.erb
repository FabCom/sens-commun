<%recipients = Array.new%>
<%@private_message.recipients.each do |pm|%>
  <% recipients.push({type: "primary btn-sm disabled", label: "#{pm.email}", path: "#"})%>
<%end%>

<%card = {
  header: "Message de #{@private_message.author.email}", 
  title: @private_message.object, 
  subtitle: "Reçu le #{format_date_with_hour(@private_message.created_at)}", 
  text: @private_message.content,
  actions_title: "Destinataires",
  actions: recipients
  }
  %>

<%= render "partials/components/card", card: card%>

<%= link_to 'Retour à la liste des messages', private_messages_path(), class: "btn btn-primary btm-sm" %>
