<h2 class="text-success text-center"> <%= @view_title %> </h2>

<table class="table table-dark table-hover mt-4 mb-5">
  <thead>
    <tr>
      <th>Object</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @private_messages.each do |pm| %>
      <tr>
        <td><%= pm.object %></td>
        <td><%= pm.content %></td>
        <td><%= pm.author_id %></td>
        <td><%= link_to 'Show', pm %></td>
        <td><%= link_to 'Edit', edit_private_message_path(pm) %></td>
        <td><%= link_to 'Destroy', pm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>