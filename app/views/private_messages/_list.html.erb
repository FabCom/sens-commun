<h1 class="text-light text-center"> <%= @view_title %> </h1>
  
<h3 class="text-info align-self-start"> Messages reçus</h3>

<table class="table table-dark table-hover mt-4 mb-5">
  <thead>
    <tr>
      <th>Objet</th>
      <th>Auteur</th>
      <th>Date de réception</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @received_messages.reverse_each do |pm| %>
      <%= link_to user_dashboards_index_path(clicked_link: "Messagerie", message_id: pm.id) do%>
      <tr>
        <td><%= pm.object %></td>
        <td><%= pm.author.email %></td>
        <td><%= format_date_with_hour(pm.created_at) %></td>
        <td><%= link_to ("<i class='far fa-eye'></i>").html_safe, user_dashboards_index_path(clicked_link: "Messagerie", message_id: pm.id), class: "btn btn-success btn-sm" %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<% if @sent_messages%>

  <h3 class="text-info align-self-start"> Messages envoyés</h3>

  <table class="table table-dark table-hover mt-4 mb-5">
    <thead>
      <tr>
        <th>Objet</th>
        <th>Auteur</th>
        <th>Date de réception</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sent_messages.reverse_each do |pm| %>
        <%= link_to user_dashboards_index_path(clicked_link: "Messagerie", message_id: pm.id) do%>
        <tr>
          <td><%= pm.object %></td>
          <td><%= pm.author.email %></td>
          <td><%= format_date_with_hour(pm.created_at) %></td>
          <td><%= link_to ("<i class='far fa-eye'></i>").html_safe, user_dashboards_index_path(clicked_link: "Messagerie", message_id: pm.id), class: "btn btn-success btn-sm" %></td>
        </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Nouveau Message", user_dashboards_index_path(clicked_link: "Messagerie", message: "new"), class: "btn btn-success px-5 align-self-center" %>

<%end%>
