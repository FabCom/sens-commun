<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h1>Éditer mes identifiants</h1>
  <%= link_to 'Retour', edit_profile_path(current_user.profile), class:"btn btn-secondary btn-sm mb-3" %>
</div>

<div class="d-flex justify-content-evenly align-items-start flex-wrap">
  <div class="d-flex justify-content-center">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs bg-white p-4">
      <%= f.input :email, required: true, autofocus: true, label: "Email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laisser vide pour ne pas changer votre mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label:"Nouveau mot de passe" %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: "Confirmer votre nouveau mot de passe" %>
      <%= f.input :current_password,
                  hint: "Votre mot de passe actuel pour confirmer les changements",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions d-flex justify-content-center mt-5">
      <%= f.button :submit, "Mettre à jour", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
    
</div>

<div class="d-flex flex-column justify-content-start">
  <h3>Supprimer mon compte</h3>
  <p>Vous ne voulez plus de nos chats ? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-sm" %></p>
</div>
  