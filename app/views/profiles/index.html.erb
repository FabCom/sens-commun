<p id="notice"><%= notice %></p>

<h1>Listes des utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Ville</th>
      <th>Prénom</th>
      <th>Nom de famille</th>
      <th>Téléphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.email %></td>
        <td><%= profile.city.name %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.phone_number %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(profile.user) %></td>
        <td><%= link_to 'Destroy', user_registration_path(profile.user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

