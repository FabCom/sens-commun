<div class="d-flex flex-column">
  <hr class="mb-3">
  <h4 class="text-info text-decoration-none">Organisations gérées</h4>
  <hr class="mt-2">

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      Choisir une organisation
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <% current_user.managed_organizations.each do |organization| %>
        <li class="nav-item">
            <%= link_to "#{organization.name}", organization_path(id: organization.id, organization_managed_id: organization.id), class:"sidebar-item text-info text-decoration-none m-3" %>
        </li>
        <br>
      <% end %>
    </ul>
  </div>
</div>
