
<%if params[:search_by] && (params[:search_by] != "all" || params[:search_by] == "sectors" || params[:search_by] == "status" || params[:search_by] == "geo_zones")%>
  <div class="d-flex flex-column">
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <%= link_to "Choisir une autre catégorie", organizations_path(search_by: "all"), class:"btn btn-success btn-outline-light py-1" %>
      </li>
    </ul>
    <hr class="mb-3">
    <h4 class="text-info text-decoration-none"><%= @sidebar_title%></h4>
    <hr class="mt-2">
    <ul class="nav nav-pills flex-column mb-auto">
        <% @sidebar_links.each do |link| %>
          <li class="nav-item" >
            <%= link_to "#{link[:label]}", organizations_path(search_by: params[:search_by], categ_id: link[:id]), class:"nav-link sidebar-item" %>
          </li>
          <% if link != @sidebar_links.last%>
            <br>
          <%end%>
        <% end %>
    </ul>
    <hr>
  </div>
<%else %>
  <div class="d-flex flex-column">
    <hr class="mb-3">
    <h4 class="text-info text-decoration-none">Parcourir les organisations</h4>
    <hr class="mt-2">
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <%= link_to "Par zones géographiques", organizations_path(search_by: "geo_zones"), class:"nav-link sidebar-item" %>
      </li>
      <br>
      <li class="nav-item" >
        <%= link_to "Par secteur d'activité", organizations_path(search_by: "sectors"), class:"nav-link sidebar-item" %>
      </li>
      <br>
      <li class="nav-item">
        <%= link_to "Par statut", organizations_path(search_by: "status"), class:"nav-link sidebar-item" %>
      </li>
    </ul>
  </div>
<%end%>
