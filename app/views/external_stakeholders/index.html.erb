  <div class="d-flex justify-content-evenly mt-5">
    <div class="d-flex flex-column">
      <h2 class="text-success text-center mb-4"> Parties prenantes de l'organisation </h2>
      <% @external_stakeholders_category.each do |category| %>
        <div class="d-flex flex-column align-items-center bg-info text-white mt-4">
          <h5><%=category.name.capitalize%></h5>
        </div>
        <%= render "external_stakeholders/list", external_stakeholders: @all_external_stakeholders.where(stakeholder_category: category)%>
      <%end%>
    </div>
    <div class="d-flex flex-column">
      <div class="d-flex flex-column mt-5">
        <h4 class="text-info">Demande de participation d'utilisateurs</h4>
        <%= render "stakeholder_requests/list"%>
      </div>
      <div class="d-flex flex-column mt-5">
        <h4 class="text-info">Ajouter une partie prenante</h4>
        <%=render "external_stakeholders/form"%>
      </div>
    </div>
  </div>
