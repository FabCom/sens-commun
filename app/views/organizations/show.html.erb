<h3 class="text-light text-start my-5 ms-5"> <%= @view_title %> </h3>

<div class="container-fluid px-5">

  <div class="row my-4">
    <div class="card01">
      <main>
        <div class="card01__logo"> 
          <%if @organization.logo.attached?%>
            <%=image_tag(@organization.logo)%> 
          <%elsif @organization.logo_url%>
            <%=image_tag(@organization.logo_url)%>
          <%end%>
        </div>
        <div class="card01__content">
          <h1> <%=@organization.name%> </h1>
          <h2> <%=@organization.status.name%> </h2> 
          <p> <%=@organization.description%> </p> 
        </div>
      </main>
    </div>
  </div>

  <div class="row my-4">
    <section class="card02">
      <div class="card02__infos">
        <div class="codes">
          <h3> Secteur d'activité </h3> 
          <p> <%=@organization.activity_sector.name%> </p>
        </div>
        <div class="codes">
          <h3> SIREN </h3> 
          <p> <%=@organization.siren%> </p>
        </div>
        <div class="codes">
          <h3> NAF/APE </h3>
          <p> <%=@organization.naf_ape%> </p>
        </div>
        <div class="codes">
          <h2> Dirigeants </h2>
          <% @organization.managers.each do |manager|%>
            <p> <%=manager.email%> </p>
          <%end%>
        </div>
      </div>
    </section>
  </div>

  <div class="row my-4">
    <section class="card02">
      <div class="card02__infos">
        <div class="codes">
          <h3>Site internet</h3> 
          <%=link_to(@organization.website_url, class:"text-dark", target: "_blank") do %> 
            <p><%=@organization.website_url%></p>
          <%end%>
        </div>
        <div class="codes">
          <h3>Téléphone</h3>
          <p><%=@organization.phone_number%></p>
        </div>
        <div class="codes">
          <h3>Adresse</h3>
          <p><%=@organization.address%></p>
        </div>
        <div class="codes">
          <h2>Email</h2> 
          <p><%=@organization.email%></p>
        </div>
      </div>
    </section>
  </div>

<%if @organization.managers.include?(current_user)%>
    <% card[:actions] = [{label: "Éditer les informations", path: edit_organization_path(id: @organization.id, clicked_link: "Éditer les informations"), type:"success"}] %>
  
  
  
  <%elsif @organization.users_stakeholders.include?(current_user)%>
    <%# card[:actions] = [{label: "Vous êtes partie prenante de cette organization", path: "", type:"success disabled"}] %>
    <%=  %>

  <%elsif current_user.stakeholder_requests.where(organization: @organization).empty?%>
    <%card[:actions] = [{label: "Demander à devenir partie prenante", path: organization_path(id: @organization.id, search_by: params[:search_by], categ_id: params[:categ_id],show: "StakeholderRequest"), type:"success"}]%>
  <%else %>
    <%card[:actions] = [{label: "Votre demande de participation n'a pas encore été acceptée", path: "", type:"secondary disabled"},{label: "Refaire une demande", path: organization_path(id: @organization.id,show: "StakeholderRequest"), type:"success"} ]%>
<%end%>